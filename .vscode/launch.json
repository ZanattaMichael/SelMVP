    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\Tests\\test-site\\src\\Components\\NewActivity\\index.js"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Run Pester Tests",
            "script": "${workspaceFolder}\\Tests\\Invoke-Tests.ps1",
            "args": ["${file}"],
            "cwd": "${workspaceFolder}\\Tests\\"
        }
    ]
}